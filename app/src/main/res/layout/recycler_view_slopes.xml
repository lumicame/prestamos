<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">

  <LinearLayout
          android:background="@android:color/white"
          android:id="@+id/container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp">

          <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:minHeight="?attr/actionBarSize"
                  android:orientation="horizontal"
                  android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/client_avatar"
                    android:layout_marginStart="5dp"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:tint="@color/grey_40"
                    android:src="@drawable/avatar" />

            <TextView
                    android:id="@+id/client_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_40" />

            <View
                    android:layout_width="@dimen/spacing_smlarge"
                    android:layout_height="wrap_content" />

            <ImageButton
                    android:id="@+id/bt_toggle_items"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/grey_40"
                    app:srcCompat="@drawable/ic_arrow_drop" />

          </LinearLayout>
          <LinearLayout
                  android:id="@+id/lyt_expand_items"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/spacing_middle"
                  android:orientation="vertical"
                  android:visibility="gone">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smlarge"

                    android:layout_marginRight="@dimen/spacing_smlarge"
                    android:layout_marginStart="30dp"
                    android:minHeight="@dimen/spacing_mxlarge"
                    android:orientation="horizontal">

              <TextView
                      android:id="@+id/client_address"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Web Design fghfgh fhfgh fgh fhfgh"
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smlarge"
                    android:layout_marginLeft="?attr/actionBarSize"
                    android:layout_marginRight="@dimen/spacing_smlarge"
                    android:layout_marginStart="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_mxlarge"
                    android:orientation="horizontal">

              <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Ruta"
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

              <TextView
                      android:id="@+id/name_route_loand"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smlarge"
                    android:layout_marginLeft="?attr/actionBarSize"
                    android:layout_marginRight="@dimen/spacing_smlarge"
                    android:layout_marginStart="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_mxlarge"
                    android:orientation="horizontal">

              <TextView
                      android:id="@+id/textView7"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/dues_p"
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

              <TextView
                      android:id="@+id/due_p_loand"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smlarge"
                    android:layout_marginLeft="?attr/actionBarSize"
                    android:layout_marginRight="@dimen/spacing_smlarge"
                    android:layout_marginStart="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_mxlarge"
                    android:orientation="horizontal">

              <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/dues_pass"
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

              <TextView
                      android:id="@+id/due_pass_loand"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smlarge"
                    android:layout_marginLeft="?attr/actionBarSize"
                    android:layout_marginRight="@dimen/spacing_smlarge"
                    android:layout_marginStart="?attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_xlarge"
                    android:orientation="horizontal">

              <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/dues_price"
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                       />

              <TextView
                      android:id="@+id/due_price_loand"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                       />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
              <Button
                      android:layout_weight="1"
                      android:id="@+id/Btn_call"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/call"
                      android:drawableRight="@drawable/ic_phone_green_32dp"
                      android:textSize="16dp"
                      style="@style/Widget.AppCompat.Button.Borderless"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"/>
              <Button
                      android:id="@+id/charge"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/Widget.AppCompat.Button.Borderless"
                      android:background="@color/colorPrimary"
                      android:text="@string/charge"
                      android:layout_weight="1"
                      android:textColor="@color/white"
                      android:textSize="16dp"
                      />
            </LinearLayout>
          </LinearLayout>
  </LinearLayout>

</LinearLayout>