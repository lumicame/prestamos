<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings.Settings"
        >
    <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                style="@style/TextViewTitle"
                android:text="@string/menu_settings"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white_32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:layout_below="@id/top"
            android:background="@color/grey_10">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        android:paddingBottom="90dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewCardSecond"
                    android:text="@string/account"
            android:textColor="@color/overlay_dark_90"
            android:layout_marginTop="15dp"/>
            <View style="@style/Separator"
                    android:background="@color/overlay_dark_30"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/TextViewCardTitle"
                        android:textColor="@color/overlay_dark_90"
                        android:text="@string/nit"
                        android:gravity="center"
                        android:layout_gravity="center"
                />
                <EditText
                        android:id="@+id/settings_nit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/EditTextLogin"
                        android:gravity="left"
                        android:inputType="number"
                        android:enabled="false"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/TextViewCardTitle"
                        android:textColor="@color/overlay_dark_90"
                        android:text="@string/name"
                        android:gravity="center"
                />
                <EditText
                        android:id="@+id/settings_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/EditTextLogin"
                        android:gravity="left"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/TextViewCardTitle"
                        android:textColor="@color/overlay_dark_90"
                        android:text="@string/password"
                        android:gravity="center"
                />
                <EditText
                        android:id="@+id/settings_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/EditTextLogin"
                        android:gravity="left"
                />
            </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/content_store">
    <TextView
            android:id="@+id/info_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewCardSecond"
            android:text="@string/other_options"
            android:textColor="@color/overlay_dark_30"
            android:layout_marginTop="15dp"/>
    <View style="@style/Separator"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextViewCardTitle"
                android:textColor="@color/overlay_dark_90"
                android:text="@string/name_store"
                android:gravity="center"
                />
        <EditText
                android:id="@+id/settings_name_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/EditTextLogin"
                android:gravity="left"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextViewCardTitle"
                android:textColor="@color/overlay_dark_90"
                android:text="Capital inicial"
                android:gravity="center"
                android:layout_weight="1"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:layout_weight="2">
            <EditText
                    android:id="@+id/settings_cap_initial"
                    android:layout_width="match_parent"
                    style="@style/EditTextLogin"
                    android:gravity="left"
                    android:enabled="false"
                    android:inputType="number"
                    android:layout_weight="1"
                    />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_add_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

            <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/excel" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="exportar excel" android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>