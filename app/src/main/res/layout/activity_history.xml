<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".history.HistoryActivity"
android:background="@drawable/white">
    <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    android:background="@drawable/blue"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">
        <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewTitle"
                android:text="@string/history"
        android:layout_marginLeft="49dp"/>
        <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textColorHint="#9bffffff"
                android:gravity="center"
                android:lines="1"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
    />
    <TextView
            android:id="@+id/info_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/TextViewToolbar"
            android:text="@string/select_date_info"
            android:textColor="@color/black"
    android:visibility="gone"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top"
    android:visibility="visible">
        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/container_resume"
                    android:layout_below="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blue"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewCardTitle"
                        android:textColor="#fff"
                        android:text="@string/resumen"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#cfc7c7"
                            android:text="@string/num_loands"/>
                    <TextView
                            android:id="@+id/num_loands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#fff"
                            android:text="..."
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#cfc7c7"
                            android:text="@string/num_dues"/>
                    <TextView
                            android:id="@+id/num_dues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#fff"
                            android:text="..."
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#cfc7c7"
                            android:text="@string/capital"/>
                    <TextView
                            android:id="@+id/total_capital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#fff"
                            android:text="..."
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#cfc7c7"
                            android:text="@string/gain"/>
                    <TextView
                            android:id="@+id/total_gain_initial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#fff"
                            android:text="..."
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#cfc7c7"
                            android:text="@string/utility_loands"/>
                    <TextView
                            android:id="@+id/total_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewCardThree"
                            android:textColor="#fff"
                            android:text="..."
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/top"
                    tools:listitem="@layout/recycler_view_loands"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="80dp">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>