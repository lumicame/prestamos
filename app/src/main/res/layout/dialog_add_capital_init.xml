<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_10">
    <TextView
            android:id="@+id/add_cash_cap"
            style="@style/TextViewToolbar"
            android:background="@color/colorPrimary"
            android:text="Agregar capital inicial"
    />
    <TextView
            android:id="@+id/add_cash_actual"
            style="@style/EditTextLogin"
            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
            android:layout_marginTop="10dp"
            android:text="@string/load_actually"/>
    <EditText
            android:id="@+id/add_cash_valor"
            style="@style/EditTextLogin"
            android:hint="@string/pre_payment"
            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
            android:layout_marginTop="10dp"
            android:inputType="textPhonetic"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/Btn_addcash"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Agregar"
                android:background="@drawable/btn_login"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="sans-serif-condensed"
                android:enabled="false"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>

</LinearLayout>